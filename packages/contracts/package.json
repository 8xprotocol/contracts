{
  "name": "@8xprotocol/contracts",
  "version": "0.1.0",
  "devDependencies": {
    "@0xproject/abi-gen": "^1.0.7",
    "@8xprotocol/types": "0.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.26.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "dotenv": "^6.0.0",
    "ethereumjs-abi": "^0.6.5",
    "fs-extra": "^7.0.0",
    "truffle-hdwallet-provider": "0.0.6",
    "types-ethereumjs-util": "^0.0.5",
    "typescript": "^2.9.2",
    "web3": "0.20.0",
    "web3-utils": "1.0.0-beta.35"
  },
  "scripts": {
    "test-contracts": "truffle test || true",
    "clean": "rimraf -rf ./build ./export",
    "lint-base": "solhint contracts/**/*.sol || true",
    "lint-test": "solhint contracts/**/**/*.sol || true",
    "lint-contracts": "solhint contracts/*.sol || true",
    "test": "npm-run-all test-contracts lint-base lint-test lint-contracts",
    "lint": "npm-run-all lint-base lint-test lint-contracts",
    "generate-typings": "node_modules/@0xproject/abi-gen/bin/abi-gen.js --abis '../artifacts/build/abi/json/**/*.json' --out '../artifacts/build/wrappers' --template './types/contract_templates/contract.mustache' --partials './types/contract_templates/partials/*.mustache'",
    "build-develop": "npm run clean && truffle migrate --reset --network develop && node exportArtifacts && npm run generate-typings",
    "build-kovan": "npm run clean && truffle migrate --reset --network kovan && node exportArtifacts && npm run generate-typings",
    "build-main": "npm run clean && truffle migrate --reset --network main && node exportArtifacts && npm run generate-typings"
  }
}
