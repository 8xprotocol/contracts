{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
       "node_modules/ethereum-types/index.d.ts"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./node_modules/ethereum-types/index.d.ts",
    "./node_modules/web3-typescript-typings/index.d.ts"
  ]
}
