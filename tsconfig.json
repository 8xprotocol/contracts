{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "pretty": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@0xproject/types",
            "node_modules/@0xproject/typescript-typings/types",
            "node_modules/@types"
        ],
        "strict": true
    }
}
