{
  "version": "0.1.0",
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.26.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "ethereumjs-abi": "^0.6.5",
    "fs-extra": "^7.0.0",
    "typechain": "^0.2.7",
    "web3": "0.20.x"
  },
  "peerDependencies": {},
  "scripts": {
    "test-contracts": "truffle test || true",
    "clean": "rimraf -rf ./build ./export",
    "lint-base": "solhint contracts/**/*.sol || true",
    "lint-test": "solhint contracts/**/**/*.sol || true",
    "lint-contracts": "solhint contracts/*.sol || true",
    "test": "npm-run-all test-contracts lint-base lint-test lint-contracts",
    "lint": "npm-run-all lint-base lint-test lint-contracts",
    "generate-ts": "node_modules/.bin/typechain \"../artifacts/json/*.json\" --outDir ../artifacts/ts",
    "build": "npm run clean && truffle compile && node exportArtifacts && npm run generate-ts"
  }
}
